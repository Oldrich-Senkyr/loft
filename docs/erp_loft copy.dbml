Table Person {
  id integer [pk, increment, note: "ID osoby"]
  unique_id varchar(20) [unique, not null, note: "Unikátní ID osoby (např. ET10, EV10)"]
  display_name varchar(25) [default: "Alias", note: "Přezdívka osoby"]
  first_name varchar(25) [default: "Nomen", note: "Křestní jméno osoby"]
  last_name varchar(25) [default: "Omen", note: "Příjmení osoby"]
  role integer [not null, default: 6, note: "Role osoby (viz RoleChoices enum)"]
  title_before varchar(10) [note: "Titul před jménem (např. Dr., Ing.)"]
  title_after varchar(10) [note: "Titul za jménem (např. Ph.D., MBA)"]
}

Table Company {
  id integer [pk, increment, note: "Jedinečné ID společnosti"]
  name varchar(255) [unique, not null, note: "Název společnosti"]
  description text [note: "Popis společnosti"]
  created_at datetime [default: `current_timestamp`, note: "Datum a čas vytvoření společnosti"]
}

 Table Division {
  id integer [pk, increment, note: "Jedinečné ID divize"]
  company_id integer [not null, Ref: > Company.id, note: "Odkaz na společnost, ke které divize patří"]
  name varchar(255) [not null, note: "Název divize"]
  description text [note: "Popis divize"]
  
  
} 